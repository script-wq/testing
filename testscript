-- Void Trade Freeze GUI by Void Scripts (Draggable + Notification + Simple Button Text)

pcall(function()
    game.CoreGui:FindFirstChild("VoidTradeFreezeGUI"):Destroy()
end)

local playerGui = game:GetService("CoreGui")

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "VoidTradeFreezeGUI"
screenGui.Parent = playerGui
screenGui.ResetOnSpawn = false

-- Intro Label
local creditLabel = Instance.new("TextLabel")
creditLabel.Size = UDim2.new(0.6, 0, 0.2, 0)
creditLabel.Position = UDim2.new(0.2, 0, 0.4, 0)
creditLabel.BackgroundTransparency = 1
creditLabel.Text = "üåå Made by Void Scripts üåå"
creditLabel.TextScaled = true
creditLabel.Font = Enum.Font.GothamBold
creditLabel.TextColor3 = Color3.fromRGB(138, 43, 226)
creditLabel.TextStrokeTransparency = 0
creditLabel.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
creditLabel.Parent = screenGui

-- Fade In
for i = 0, 1, 0.02 do
	creditLabel.TextTransparency = 1 - i
	wait(0.02)
end

wait(2)

-- Fade Out
for i = 0, 1, 0.02 do
	creditLabel.TextTransparency = i
	wait(0.02)
end

creditLabel:Destroy()

-- Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 300, 0, 150)
mainFrame.Position = UDim2.new(0.5, -150, 0.5, -75)
mainFrame.BackgroundColor3 = Color3.fromRGB(25, 0, 40)
mainFrame.BorderSizePixel = 0
mainFrame.BackgroundTransparency = 0.2
mainFrame.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 12)
corner.Parent = mainFrame

-- Title Bar (drag handle)
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0.3, 0)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundTransparency = 1
title.Text = "üåå Trade Freezer üåå"
title.Font = Enum.Font.GothamBlack
title.TextScaled = true
title.TextColor3 = Color3.fromRGB(200, 0, 255)
title.Parent = mainFrame

-- Make title draggable
local dragging = false
local dragInput, mousePos, framePos

title.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = true
		mousePos = input.Position
		framePos = mainFrame.Position

		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

title.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement then
		dragInput = input
	end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
	if input == dragInput and dragging then
		local delta = input.Position - mousePos
		mainFrame.Position = UDim2.new(
			framePos.X.Scale,
			framePos.X.Offset + delta.X,
			framePos.Y.Scale,
			framePos.Y.Offset + delta.Y
		)
	end
end)

-- Toggle Button
local toggle = Instance.new("TextButton")
toggle.Size = UDim2.new(0.6, 0, 0.3, 0)
toggle.Position = UDim2.new(0.2, 0, 0.5, 0)
toggle.BackgroundColor3 = Color3.fromRGB(50, 0, 80)
toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
toggle.TextScaled = true
toggle.Font = Enum.Font.GothamSemibold
toggle.Text = "Trade Freeze"
toggle.Parent = mainFrame

local toggleCorner = Instance.new("UICorner")
toggleCorner.CornerRadius = UDim.new(0, 8)
toggleCorner.Parent = toggle

-- UI Glow
local uiStroke = Instance.new("UIStroke")
uiStroke.Thickness = 2
uiStroke.Color = Color3.fromRGB(255, 0, 255)
uiStroke.Parent = mainFrame

-- Notification Function
local function showNotification(message)
	local notif = Instance.new("TextLabel")
	notif.Size = UDim2.new(0.3, 0, 0.07, 0)
	notif.Position = UDim2.new(0.35, 0, 0.93, 0)
	notif.BackgroundColor3 = Color3.fromRGB(60, 0, 90)
	notif.TextColor3 = Color3.fromRGB(255, 255, 255)
	notif.TextStrokeTransparency = 0.4
	notif.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
	notif.Font = Enum.Font.GothamBold
	notif.TextScaled = true
	notif.Text = message
	notif.Parent = screenGui
	notif.BackgroundTransparency = 1
	notif.TextTransparency = 1

	local corner = Instance.new("UICorner", notif)
	corner.CornerRadius = UDim.new(0, 8)

	-- Fade In
	for i = 1, 0, -0.1 do
		notif.BackgroundTransparency = i
		notif.TextTransparency = i
		wait(0.02)
	end

	wait(2)

	-- Fade Out
	for i = 0, 1, 0.1 do
		notif.BackgroundTransparency = i
		notif.TextTransparency = i
		wait(0.02)
	end

	notif:Destroy()
end

-- Toggle Logic
local tradeFreezeEnabled = false

toggle.MouseButton1Click:Connect(function()
	tradeFreezeEnabled = not tradeFreezeEnabled
	if tradeFreezeEnabled then
		toggle.BackgroundColor3 = Color3.fromRGB(120, 0, 180)
		showNotification("Trade freeze is: ON")

		-- üîí INSERT TRADE FREEZE LOGIC HERE
		print("[VOID SCRIPTS] Trade Freeze ENABLED!")
	else
		toggle.BackgroundColor3 = Color3.fromRGB(50, 0, 80)
		showNotification("Trade freeze is: OFF")

		-- ‚ùÑÔ∏è UNFREEZE LOGIC GOES HERE
		print("[VOID SCRIPTS] Trade Freeze DISABLED!")
	end
end)
