-- Void Trade Freeze GUI by Void Scripts

-- Clean up any existing GUI
pcall(function()
    game.CoreGui:FindFirstChild("VoidTradeFreezeGUI"):Destroy()
end)

local playerGui = game:GetService("CoreGui")

-- Create ScreenGui container
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "VoidTradeFreezeGUI"
screenGui.Parent = playerGui
screenGui.ResetOnSpawn = false

-- Intro Text Label (smaller now)
local creditLabel = Instance.new("TextLabel")
creditLabel.Size = UDim2.new(0.6, 0, 0.2, 0)
creditLabel.Position = UDim2.new(0.2, 0, 0.4, 0)
creditLabel.BackgroundTransparency = 1
creditLabel.Text = "üåå Made by Void Scripts üåå"
creditLabel.TextScaled = true
creditLabel.Font = Enum.Font.GothamBold
creditLabel.TextColor3 = Color3.fromRGB(138, 43, 226)
creditLabel.TextStrokeTransparency = 0
creditLabel.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
creditLabel.Parent = screenGui

-- Fade In
for i = 0, 1, 0.02 do
	creditLabel.TextTransparency = 1 - i
	wait(0.02)
end

wait(2)

-- Fade Out
for i = 0, 1, 0.02 do
	creditLabel.TextTransparency = i
	wait(0.02)
end

creditLabel:Destroy()

-- Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 300, 0, 150)
mainFrame.Position = UDim2.new(0.5, -150, 0.5, -75)
mainFrame.BackgroundColor3 = Color3.fromRGB(25, 0, 40)
mainFrame.BorderSizePixel = 0
mainFrame.BackgroundTransparency = 0.2
mainFrame.Active = true
mainFrame.Draggable = true -- üü£ Make GUI draggable
mainFrame.Parent = screenGui

-- Frame corner rounding
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 12)
corner.Parent = mainFrame

-- Title Bar
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0.3, 0)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundTransparency = 1
title.Text = "üåå Trade Freezer üåå"
title.Font = Enum.Font.GothamBlack
title.TextScaled = true
title.TextColor3 = Color3.fromRGB(200, 0, 255)
title.Parent = mainFrame

-- Toggle Button
local toggle = Instance.new("TextButton")
toggle.Size = UDim2.new(0.6, 0, 0.3, 0)
toggle.Position = UDim2.new(0.2, 0, 0.5, 0)
toggle.BackgroundColor3 = Color3.fromRGB(50, 0, 80)
toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
toggle.TextScaled = true
toggle.Font = Enum.Font.GothamSemibold
toggle.Text = "Trade Freeze: OFF"
toggle.Parent = mainFrame

local toggleCorner = Instance.new("UICorner")
toggleCorner.CornerRadius = UDim.new(0, 8)
toggleCorner.Parent = toggle

-- Glow Stroke
local uiStroke = Instance.new("UIStroke")
uiStroke.Thickness = 2
uiStroke.Color = Color3.fromRGB(255, 0, 255)
uiStroke.Parent = mainFrame

-- Toggle Logic
local tradeFreezeEnabled = false

toggle.MouseButton1Click:Connect(function()
	tradeFreezeEnabled = not tradeFreezeEnabled
	if tradeFreezeEnabled then
		toggle.Text = "Trade Freeze: ON"
		toggle.BackgroundColor3 = Color3.fromRGB(120, 0, 180)

		-- üßä INSERT YOUR ACTUAL FREEZE LOGIC HERE
		print("[VOID SCRIPTS] Trade Freeze ENABLED!")
	else
		toggle.Text = "Trade Freeze: OFF"
		toggle.BackgroundColor3 = Color3.fromRGB(50, 0, 80)

		-- ‚ùÑÔ∏è DISABLE FREEZE LOGIC HERE
		print("[VOID SCRIPTS] Trade Freeze DISABLED!")
	end
end)
